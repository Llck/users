<%= form_for @user do |form| %>

  <table>
    <tbody>

      <tr>
        <td><%= form.label :name %></td>
        <td><%= form.text_field :name %></td>
      </tr>

      <tr>
        <td><%= form.label :email %></td>
        <td><%= form.text_area :email %></td>
      </tr>

    </tbody>
  </table>

<%= form.submit "Save info" %>
<% end %>
